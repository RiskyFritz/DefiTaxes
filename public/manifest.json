{
	"manifest_version": 2,

	"name": "InfiniPassword",
	"description": "This extension is a free password manager.",
	"version": "1.0",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScripts/populatePasswords.js"],
			"css": ["contentScripts/populatePasswords.css"]
		}
	],

	"background": {
		"service_worker": "contentScripts/background.js"
	},

	"browser_action": {
		"default_icon": "images/icon.png",
		"default_popup": "index.html"
	},

	"permissions": ["activeTab", "clipboard-write", "storage"]
}
